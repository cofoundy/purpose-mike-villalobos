---
import { siteConfig } from "../config";
---

<section class="hero-section relative bg-navy text-white min-h-screen flex items-center overflow-hidden">
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-navy via-navy to-black"></div>

  <!-- Floating particles -->
  <div class="particles" aria-hidden="true">
    <span class="particle"></span>
    <span class="particle"></span>
    <span class="particle"></span>
    <span class="particle"></span>
    <span class="particle"></span>
    <span class="particle"></span>
    <span class="particle"></span>
    <span class="particle"></span>
  </div>

  <!-- Center glow -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
    <div class="w-[600px] h-[600px] rounded-full bg-white/5 blur-[100px]"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-6 text-center w-full py-24">
    <h1 class="hero-animate hero-delay-1 text-4xl md:text-6xl lg:text-7xl font-black tracking-tight leading-[1.1] mb-6">
      Invest with clarity.<br />
      Live with intention.
    </h1>
    <p class="hero-animate hero-delay-2 text-gray-300 text-lg mb-10">
      {siteConfig.subtitle}
    </p>
    <div class="hero-animate hero-delay-3 flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="#about"
        class="btn-primary bg-accent hover:bg-accent-hover text-white px-8 py-3 font-semibold"
      >
        Start Here
      </a>
      <a
        href="#welcome"
        class="btn-secondary flex items-center gap-2 text-white hover:text-gray-300"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Watch the Introduction Video
      </a>
    </div>
  </div>
</section>
