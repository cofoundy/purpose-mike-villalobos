---
import { siteConfig } from "../config";
---

<section id="education" class="py-20 bg-white">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="scroll-animate font-display text-3xl md:text-4xl font-bold text-center mb-4">
      EDUCATION
    </h2>
    <p class="scroll-animate text-text-muted text-center mb-12 max-w-2xl mx-auto">
      {siteConfig.coursesSubtitle}
    </p>

    <div class="grid md:grid-cols-2 gap-6">
      {siteConfig.courses.map((course, index) => (
        <div class={`scroll-animate-scale stagger-${index + 1} card-hover rounded-lg p-8 ${course.featured ? 'featured-card bg-navy text-white' : 'bg-white border border-gray-200'}`}>
          <!-- Icon -->
          <div class="mb-6">
            {course.type === 'course' ? (
              <svg class={`w-10 h-10 ${course.featured ? 'text-white' : 'text-navy'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5"/>
              </svg>
            ) : (
              <svg class={`w-10 h-10 ${course.featured ? 'text-white' : 'text-navy'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.125-3h17.25c.621 0 1.125-.504 1.125-1.125V4.875c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125z"/>
              </svg>
            )}
          </div>
          <h3 class={`text-lg font-bold mb-3 ${course.featured ? 'text-white' : 'text-navy'}`}>
            {course.title}
          </h3>
          <p class={`text-sm ${course.featured ? 'text-gray-300' : 'text-text-muted'}`}>
            {course.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
